<div class="container">
<br>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @item.name %>
</p>

<p>
  <strong>Value:</strong>
  <%= @item.value %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @item.weight %>
</p>

<p>
  <strong>Location:</strong>
  <%= @item.location %>
</p>

<br>
<p id="comment-heading"> Comments </p>
<ul id="comment-list">
  <% @item.comments.each do |comment|%>
    <li><%= comment.content%></li>
    <%end%>
</ul>


<%= form_tag("/items/#{@item.id}/add", method: "post", id: "add-comment") do %>
  <%= label_tag(:content, "") %>
  <%= text_area_tag(:content) %>
  <%= submit_tag("Add Comment") %>
<% end %>


<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
</div>