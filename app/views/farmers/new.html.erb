<%-# Sign in -%>
 <div class= "container">
    <div class = "row">
        <div class="col-6 ">
            <h1>Sign up</h1>
            <%= render 'form', farmer: @farmer %>
        </div>
     
  
 <%-# Sign up -%>
        <div class="col-6 ">
             <h1>Log in</h1>
             <%= form_tag(:action => "log_in", :method => "post") do %>
                <p>
                  <%= label_tag(:username) %>:
                  <%= text_field_tag(:username) %>
                </p>
                <p>
                  <%= label_tag(:password) %>:
                  <%= password_field_tag(:password) %>
                </p>
                  <%= submit_tag("Login") %>
                <% end %>
        </div>
    </div>
</div>
